{% macro button(value, href = "", isActive = true, isSplit = false) %}
    <div class="m-1 inline-block">
        {% if isActive %}
        <a href="{{ href }}" class="bg-secondary_color px-4 py-1 rounded-full text-onsecondary_color font-bold whitespace-nowrap">{{ value }}</a>
        {% else %}
            {% if isSplit %}
            <a href="{{ href }}" class="px-4 py-1 font-bold border border-secondary_color text-secondary_color rounded-full whitespace-nowrap hover:bg-black hover:bg-opacity-10">{{ value }}</a>
            {% else %}
            <a href="{{ href }}" class="px-4 py-1 font-bold text-secondary_color rounded-full whitespace-nowrap hover:bg-black hover:bg-opacity-10">{{ value }}</a>
            {% endif %}
        {% endif %}
    </div>
{% endmacro %}

{% macro hr() %}
    <hr class="border-primary_color">
{% endmacro %}

{% macro kajianHeadline(bab, hadist, title, image) %}
    <a href="">
        <article class="whitespace-normal rounded-md hover:text-opacity-50 text-white flex flex-col justify-end mr-4"
        style="width: 444px; height: 249.53px; background: linear-gradient(to right, rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35)), url({{image}}); background-repeat: no-repeat, no-repeat; background-size: cover;">
        <div class="p-6">
            <p class="text-sm">{{ bab }}<br>
                {{ hadist }}</p>
            <h4 class="text-3xl font-bold">{{ title }}</h4>
        </div>
        </article>
    </a>
{% endmacro %}

{% macro babTile(bab, name) %}
    <a href="" class="w-full md:w-1/3 p-2">
        <article class="h-full">
            <div class=" rounded bg-primary_color hover:bg-opacity-50 hover:bg-primary_color  px-5 py-4 h-full flex flex-col justify-end">
                <p class="font-display font-bold text-xl">{{ bab }}</p>
                <p class="w-full text-sm overflow-hidden overflow-ellipsis">{{ name }}</p>
            </div>
        </article>
    </a>
{% endmacro %}